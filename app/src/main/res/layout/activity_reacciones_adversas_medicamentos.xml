<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ReaccionesAdversasMedicamentosActivity"
    android:gravity="center"
    android:background="@drawable/pixel2"
    android:orientation="vertical">

    <TextView
        android:id="@+id/texssssst"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_marginBottom="20dp"
        android:textSize="23dp"
        android:textColor="#050505"
        android:background="#00aae4"
        android:gravity="center"
        android:text="REACCIONES ADVERSAS A MEDICAMENTOS" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/lblFechaNotificacion"
            android:layout_width="wrap_content"
            android:textStyle="bold"
            android:textSize="18dp"
            android:layout_margin="10dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#050505"
            android:text="Fecha notificación:" />

        <EditText
            android:id="@+id/txtFechaNotificacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_margin="5dp"
            android:hint="Ingresar Fecha"
            android:inputType="text|date"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:textStyle="bold"
            android:textSize="15dp"
            android:layout_margin="10dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#050505"
            android:text="Tipo RAM:" />

        <EditText
            android:id="@+id/txtTipoRAM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_margin="5dp"
            android:hint="Ingresar tipo RAM"

            />

    </LinearLayout>




    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:textSize="16dp"
            android:layout_margin="10dp"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:textColor="#050505"
            android:text="Medicamento Sospechoso:" />

        <EditText
            android:id="@+id/txtMedicamentoSospechoso"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_margin="5dp"
            android:hint="Ingresar Medicamento "

            />



    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/lblFechaInicio"
            android:layout_width="wrap_content"
            android:textStyle="bold"
            android:textSize="17dp"
            android:layout_margin="10dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#050505"
            android:text="Fecha Inicio:" />

        <EditText
            android:id="@+id/txtFechaInicio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_margin="8dp"
            android:hint="Ingresar Fecha Inicio"
            android:inputType="text|date"
            />



    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/lblFechaFinal"
            android:layout_width="wrap_content"
            android:textStyle="bold"
            android:textSize="17dp"
            android:layout_margin="10dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#050505"
            android:text="Fecha Final:" />

        <EditText
            android:id="@+id/txtFechaFinal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_margin="8dp"
            android:hint="Ingresar Fecha Final"
            android:inputType="text|date"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:textStyle="bold"
            android:textSize="17dp"
            android:layout_margin="10dp"
            android:layout_height="wrap_content"
            android:textColor="#050505"
            android:gravity="center"
            android:text="Disposición/Evolución:" />

        <EditText
            android:id="@+id/txtDisposicionEvolucion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_margin="6dp"
            android:hint="Ingresar Evolución"

            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:textStyle="bold"
            android:textSize="17dp"
            android:layout_margin="10dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#050505"
            android:text="Radiologia:" />

        <EditText
            android:id="@+id/txtRadiologia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_margin="6dp"
            android:hint="Ingresar Radiología"

            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:textStyle="bold"
            android:textSize="17dp"
            android:layout_margin="10dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#050505"
            android:text="Conclu./Recom.:" />

        <EditText
            android:id="@+id/txtConclusionesRecomendaciones"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_margin="2dp"
            android:hint="Ingresar recomen."

            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
    <Button
        android:id="@+id/btnRegistrar"
        android:layout_width="wrap_content"
        android:backgroundTint="#008000"
        android:textColor="@color/white"
        android:layout_marginTop="5dp"
        android:layout_height="wrap_content"
        android:text="REGISTRAR" />

    <Button
        android:id="@+id/btnVolver"
        android:layout_width="wrap_content"
        android:backgroundTint="@color/design_default_color_error"
        android:textColor="@color/white"
        android:layout_marginTop="5dp"
        android:layout_height="wrap_content"
        android:text="CANCELAR" />
    </LinearLayout>
</LinearLayout>